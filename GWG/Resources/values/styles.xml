<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="dialog_animation">
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_right</item>
  </style>
  
  <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#ffffff</item>
    <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
  </style>
  
  <style name="ToolBarStyle" parent="Theme.AppCompat">
    <item name="android:textColorPrimary">#699791</item>
    <item name="android:textColorSecondary">#699791</item>
    <item name="actionMenuTextColor">#699791</item>
    <item name="colorPrimary">#ffffff</item>
  </style>

  <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">#F5F5F5</item>
    <item name="spinBars">true</item>
  </style>
</resources>